<link rel="stylesheet" href="/css/profile.css" />
{{> profile-nav}}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3" id="sidebar" >
       
         {{> side-nav}}
        </div>
        <div class="col-lg-9 note-area" id="content">
            <div>
                <h2>Notes</h2>
                <hr>
            </div>  
            <div class="form-group">
                <label for="note"></label>
                <textarea class="form-control" id="note" rows="3" placeholder="Enter your note here"></textarea>
                <div>
                    <button type="button" class="btn btn-primary" id="add-note">Add Note</button>
                </div>
            </div>
            <div>
                <h3>My Notes</h3>
                <hr>
                <div id="notes-list">
                    {{#each noteData}}
                        <div class="card">
                            <div class="card-body">
                                <p class="card-text">{{this.text}}</p>
                                <button type="button" class="btn btn-danger" id="delete-note" data-id="{{this._id}}">Delete</button>
                            </div>
                        </div>
                    {{/each}}
            </div>
       </div>
   </div>
</div>

<script src="/js/profile.js"></script>